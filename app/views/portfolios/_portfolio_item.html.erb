<div class="card" data-id="<%= portfolio_item.id %>">
  <%#= image_tag portfolio_item.thumb_image.to_s unless portfolio_item.thumb_image.nil? %>
  <% if portfolio_item.thumb_image.file.exists? %>
		<%= image_tag portfolio_item.thumb_image.to_s, width: '100%' %>
	<% else %>
		<%= image_tag 'https://placehold.it/350x200' %>
	<% end %>
	<p class="card-text">
  	<span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
  </p>
</div>