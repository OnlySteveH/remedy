<%= form_for(@portfolio_item) do |form| %>
  <div class='row'>
    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.file_field :main_image %>
      </div>

      <div class="form-group">
        <%= form.file_field :thumb_image %>
      </div>

    </div>
    <div class='col-md-6'>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', rows: 5 %>
      </div>      
    </div>
  </div> <!-- row -->

  <hr>
  <div class='row'>
    <div class='col-md-6'>
      <h3>Technologies used</h3>

      <div>
        <%= form.fields_for :technologies do |tech_form| %>
          <div class="form-group">
            <%= tech_form.label :name %>
            <%= tech_form.text_field :name, class: 'form-control' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class='col-md-6'>
      <!--
        **** REFACTOR THIS!!! ****
      -->
      <div>
        <% if !@portfolio_item.thumb_image.file.nil? %>
          <%= image_tag @portfolio_item.thumb_image %>
        <% else %>
          <%= image_tag 'https://placehold.it/425x275' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <div class="form-group">
        <%= form.submit 'Save changes', class:'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>

<% end %>